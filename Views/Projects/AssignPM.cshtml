@model Unbugit.Models.ViewModels.AssignPMViewModel


<div class="container">
    <h2> Assign Project Manager </h2>

    <div class="row">
        <div class="col">
            <div class="panel panel-green margin-bottom-40">
                <div class="panel-heading">
                    <h3 class="panel-title">@Model.Project.Name</h3>
                </div>
            </div>
            <p>
                Project :
                <span>@Model.Project.Name</span>
            </p>

            <form asp-action="AssignPM" asp-controller="UserRoles" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Project.Id">
                <input type="hidden" asp-for="@Model.Project.Name">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="@Model.PMId" class="control-label">Assign Project Manager for Project: @Model.Project.Name</label>
                        <select asp-for="@Model.PMId" class="form-control" asp-items="@Model.Users" multiple="multiple"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input type="submit" class="btn btn-success" value="Assign PM" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>