@model Unbugit.Models.ViewModels.AssignPMViewModel


<div class="container">
    <h2> Assign Project Manager </h2>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div>
                        <h3 class="panel-title">@Model.Project.Name</h3>

                    </div>
                    <form asp-action="AssignPM" asp-controller="Projects" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.Project.Id">
                        <input type="hidden" asp-for="@Model.Project.Name">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="@Model.PMId" class="control-label">Assign Project Manager for Project: @Model.Project.Name</label>
                                <select class="select2-example" asp-for="@Model.PMId" class="form-control" asp-items="@Model.Users" multiple="multiple"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" class="btn btn-success" value="AssignPM" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Project.Id">Back to Project</a>
        @*@Html.ActionLink("Back to List", "Details")*@
    </div>
</div>


@section Scripts{
    <!-- Select2 multiselect -->
    <script src="~/vendors/select2/js/select2.min.js"></script>
    <script>$('.select2-example').select2({
            placeholder: 'Select'
        });</script>
}
