@model Unbugit.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <div class="col-lg-4 col-md-6 offset-lg-4 card shadow bg-dark p-4 text-center">
            <dt class="col-sm-6 offset-3 text-info">
                Name
            </dt>
            <dd class="col-sm-8 offset-2">
                @Model.Name
            </dd>
            <dt class="col-sm-6 offset-3 text-info">
                Description
            </dt>
            <dd class="col-sm-8 offset-2">
                @Model.Description
            </dd>
            <dt class="col-sm-6 offset-3 text-info">
                Started
            </dt>
            <dd class="col-sm-8 offset-2">
                @Model.StartDate.ToString("d")
            </dd>
            <dt class="col-sm-6 offset-3 text-info">
                Ending
            </dt>
            <dd class="col-sm-8 offset-2">
                @Model.EndDate?.ToString("d")
            </dd>
            <dt class="col-sm-6 offset-3 text-info">
                Archived?
            </dt>
            <dd class="col-sm-8 offset-2">
                @Model.Archived
            </dd>
            <dt class="col-sm-6 offset-3 text-info">
                Company
            </dt>
            <dd class="col-sm-8 offset-2">
                @Model.Company.Name
            </dd>
            <dt class="col-sm-6 offset-3 text-info">
                Priority
            </dt>
            <dd class="col-sm-8 offset-2">
                @Model.ProjectPriority.Id
            </dd>
            <dd class="pull-right">
                <form asp-action="Delete" class="pull-right">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /><br /><br />
                    <a asp-action="Index">Back to List</a>
                </form>
            </dd>
        </div>
    </dl>

</div>

