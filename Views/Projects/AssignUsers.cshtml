@model Unbugit.Models.ViewModels.ProjectMembersViewModel


<div class="container">
    <h2> Assign Team Members </h2>

    <div class="row">
        <div class="col">
            <div class="panel panel-green margin-bottom-40">
                <div class="panel-heading">
                    <h3 class="panel-title">@Model.Project.Name</h3>
                </div>
            </div>
            <p>
                Name :
                <span>@Model.Project.Name</span>
            </p>

            <form asp-action="AssignUsers" asp-controller="Projects" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Project.Id">
                <input type="hidden" asp-for="@Model.Project.Name">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="@Model.Users" class="control-label">Assign team members for Project: @Model.Project.Name</label>
                        <select asp-for="@Model.SelectedUsers" class="form-control select2-example" asp-items="@Model.Users" multiple="multiple"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input type="submit" class="btn btn-success" value="Assign Users" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form asp-action="RemoveUsers" asp-controller="Projects" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Project.Id">
                <input type="hidden" asp-for="@Model.Project.Name">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="@Model.Users" class="control-label">Remove team members from Project: @Model.Project.Name</label>
                        <select asp-for="@Model.SelectedUsers" class="form-control-range select2-example" asp-items="@Model.Users" multiple="multiple"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input type="submit" class="btn btn-outline-danger" value="Remove Users" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Project.Id">Back to Project</a>
        @Html.ActionLink("Back to List", "Details")
    </div>
</div>


@section Scripts{
    <!-- Select2 multiselect -->
    <script src="~/vendors/select2/js/select2.min.js"></script>
    <script>
    $('.select2-example').select2({
            placeholder: 'Select'
        });</script>
}