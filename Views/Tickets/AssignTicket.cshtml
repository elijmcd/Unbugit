@model Unbugit.Models.ViewModels.AssignDeveloperViewModel
@using Unbugit.Services.Interfaces 
@using Microsoft.AspNetCore.Mvc.Rendering

@inject  IBTCompanyInfoService CompanyInfoService;
 
@{
    int companyId = Model.Ticket.Project.CompanyId;
    List<BTUser> devs = await CompanyInfoService.GetMembersInRoleAsync("Developer", companyId);
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="AssignTicket" method="post">
                    <div class="card">
                        <div class="body">
                            <input asp-for="@Model.Ticket.Id" hidden />
                            <input asp-for="@Model.Ticket.ProjectId" hidden />
                            <div class="row clearfix">
                                <div class="col-md-6 col-sm-12">
                                    <label>Select Developer </label>
                                    <div class="form-group">
                                        <select class="form-control" asp-for="DeveloperId" asp-items="Model.Developers">
                                            <option>Select Developer</option>
                                        </select>
                                    </div>
                                    <div class="mt-4 form-group">
                                        <button type="submit" class="btn btn-outline-primary">Submit</button>
                                        <button asp-action="Dashboard" asp-controller="Home" class="btn btn-outline-danger">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

