@model Unbugit.Models.Ticket

@{
    ViewData["Title"] = "Details";
}

<h1>Ticket Details: @Model.Id</h1>

<div class="row">
    <div class="col-6">
        <div class="row">
            <div class="card border shadow-sm>
                <div class="card-body">
                    <h4>@Model.Title</h4>
                    <h6>@Model.Description</h6>
                    <p>Project: @Model.Project.Name</p>
                    <p>Status: @Model.TicketStatus.Name</p>
                    <p>
                        Developers:
                        <ul>
                            <li>@Model.DeveloperUser.AvatarFileData @Model.DeveloperUser.FullName</li>
                        </ul>
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="card border shadow-sm>
                    <div class="card-body">
                        <p>Created on: @Model.Created</p>
                        <p>Status: @Model.TicketStatus.Name</p>
                        <p>Priority: @Model.TicketPriority.Name</p>
                        <p>Type: @Model.TicketType.Name</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
