                                        @*<a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Landing", "Home", new { area = "" })" class="btn btn-outline-secondary btn-rounded" style="margin-top:10px" padding-left:10px">*@
