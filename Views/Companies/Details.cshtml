@model Unbugit.Models.Company

@using Unbugit.Services.Interfaces

@inject IBTRoleService RoleService
@inject IBTCompanyInfoService CompanyInfoService
@inject IBTProjectService ProjectService


@{
    List<Project> companyProjects = await CompanyInfoService.GetAllProjectsAsync(Model.Id);
    ViewData["Title"] = "Company Details";
}

<h1>Current Projects for @Model.Name</h1>
<h5>@Model.Description</h5>

<div class="row">
                    @foreach (var project in Model.Projects)
                    {
    <div class="col-4">
        <div class="card shadow h-100">
            <div class="card-body">
                        <a asp-action="Details" asp-controller="Projects" asp-route-id="@project.Id"><h4>@project.Name</h4></a>
                        <b>Project Manager:</b>@await ProjectService.GetProjectManagerAsync(Model.Id)
                        <br />
            </div>
        </div>
    </div>
                    }
</div>
